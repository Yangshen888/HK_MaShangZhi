
.wrap {
	padding: 30rpx;
}
.chooseTye {
	position: relative;
	padding: 0 40rpx;
	overflow: hidden;
	margin: 20rpx 0;
	height: 44rpx;
	line-height: 44rpx;
	font-size: 30rpx;
}
.chooseTye u-icon {
	position: absolute;
	top: 50%;
	right: 40rpx;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.lyBtn {
	position: fixed;
	bottom: 80rpx;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 600rpx;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 40rpx;
	background-image: -webkit-linear-gradient(80deg, rgba(184, 226, 255, 1) 0%, rgba(0, 151, 255, 1) 100%);
	background-image: linear-gradient(10deg, rgba(184, 226, 255, 1) 0%, rgba(0, 151, 255, 1) 100%);
	color: rgba(255, 255, 255, 1);
	font-weight: 600;
	font-size: 32rpx;
}

